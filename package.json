{
	"name": "hyperion",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"dev": "vite dev -d transform",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync && gql-tada generate-output && gql-tada turbo",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"tauri": "tauri",
		"lint": "eslint \"src/**/*.{ts,svelte}\" && prettier --check src/**/*",
		"lint:fix": "eslint \"src/**/*.{ts,svelte}\" --fix && prettier --write src/**/*"
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"useTabs": true,
		"plugins": [
			"prettier-plugin-svelte",
			"prettier-plugin-tailwindcss"
		]
	},
	"dependencies": {
		"@better-fetch/fetch": "^1.1.18",
		"@tailwindcss/vite": "^4.1.17",
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/plugin-clipboard-manager": "~2.3.2",
		"@tauri-apps/plugin-fs": "~2.4.4",
		"@tauri-apps/plugin-notification": "~2.3.3",
		"@tauri-apps/plugin-opener": "^2.5.2",
		"@tauri-apps/plugin-os": "~2.3.2",
		"@tauri-apps/plugin-window-state": "~2.4.1",
		"@tauri-store/svelte": "^3.1.0",
		"bits-ui": "^2.14.4",
		"chroma-js": "^3.2.0",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.19",
		"gql.tada": "^1.9.0",
		"graphql-web-lite": "16.6.0-4",
		"mode-watcher": "^1.1.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"tauri-plugin-cache-api": "^0.1.5",
		"tldts": "^7.0.19",
		"virtua": "^0.48.1"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.2.0",
		"@gql.tada/svelte-support": "^1.0.1",
		"@iconify-json/ph": "^1.2.2",
		"@internationalized/date": "^3.10.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tauri-apps/cli": "^2.9.5",
		"@types/chroma-js": "^3.1.2",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.45.2",
		"svelte-check": "^4.3.4",
		"svelte-eslint-parser": "^1.4.0",
		"tailwind-variants": "^3.2.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "~5.9.3",
		"unplugin-icons": "^22.5.0",
		"vite": "npm:rolldown-vite@latest",
		"vite-plugin-devtools-json": "^1.0.0"
	}
}
